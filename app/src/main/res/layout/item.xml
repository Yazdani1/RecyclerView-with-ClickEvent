<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    android:background="@drawable/background_color"
    android:layout_height="150dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_margin="20dp"
        android:src="@drawable/a"
        android:id="@+id/image_xml"
        android:layout_height="80dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="Title"
        android:id="@+id/title_xml"
        android:textColor="@android:color/white"
        android:layout_toRightOf="@id/image_xml"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_xml"
        android:layout_below="@id/title_xml"
        android:text="Description"
        android:id="@+id/description_xml"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_xml"
        android:layout_marginTop="5dp"
        android:layout_below="@id/description_xml"
        android:text="Author"
        android:id="@+id/author_xml"
        android:textColor="@android:color/white"
        android:textAppearance="?android:textAppearanceLarge"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/author_xml"
        android:layout_below="@id/author_xml"
        android:layout_marginLeft="70dp"
        android:text="Price"
        android:id="@+id/price_xml"
        android:textColor="@android:color/white"
        android:textAppearance="?android:textAppearanceLarge"
        />



</RelativeLayout>